<div id="postNew">
  <div class="container animated fadeIn">
   
    <div class="row">
      <div class="col">
        <h3>Create a New Posting</h3>
      </div>
    </div>
    
    <div class="row">
      <div class="col-12">
        <form class="clearfix mb-4" action="POST">

          <div class="form-group">
            <label for="artpostTitle">Title</label>
            <input type="text" id="artpostTitle" class="form-control" aria-describedby="artpostTitle" placeholder="Enter the Title of the Artwork">
          </div>

          <div class="form-group">
            <label for="artpostArtist">Artist</label>
            <input class="form-control" id="artpostArtist" aria-describedby="artpostArtist" placeholder="Who Created this Wonderful Art?"></input>
          </div>

          <div class="form-group">
            <label for="artpostURL">Image URL</label>
            <input class="form-control" id="artpostURL" aria-describedby="artpostURL" placeholder="Enter URL to an image of your art!"></input>
          </div>

          <button id="submit" class="btn float-right">SUBMIT</button>

        </form>
      </div>
    </div>
  
  </div>
</div>

